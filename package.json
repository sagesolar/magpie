{
  "name": "magpie",
  "version": "1.0.0",
  "description": "A book collection management system",
  "main": "dist/server.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "prettier --write",
    "check": "npm run lint && npm run format:check && npm run build",
    "check:all": "npm run lint && npm run format:check && npm run test && npm run build",
    "db:init": "bash scripts/database/init-database.sh",
    "db:seed": "node scripts/database/seed-firestore.js",
    "db:setup": "node scripts/database/setup-metadata.js"
  },
  "keywords": [
    "book",
    "collection",
    "pwa",
    "rest-api",
    "typescript"
  ],
  "author": "sagesolar",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/node-fetch": "^2.6.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.11.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^13.5.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.2"
  },
  "frontendDependencies": {
    "idb": "^8.0.0",
    "tesseract.js": "^5.0.4",
    "workbox-webpack-plugin": "^7.0.0"
  }
}
